{
	"version": 2,
	"builds": [
		{
			"src": "formula1charts/wsgi.py",
			"use": "@vercel/python",
			"config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
		},
		{
			"src": "build.sh",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "static"
			}
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "formula1charts/wsgi.py"
		}
	],
	"functions": {
	  "src/**": {
		"excludeFiles": "{.next,*.cache,img}/**"
	  },
	  "/**": {
		"excludeFiles": "{node_modules,env}/**"
	  }
	}
}
